name: events
on:
  schedule:
    - cron: '*/10 * * *' # Runs every day at midnight
  workflow_dispatch:
  push:
    branches-ignore:
      - features/**
  jobs:
    log-date:
      runs-on: ubuntu-latest
      steps:
        - run: date
        - run: echo "This workflow runs every 10 minutes, on manual dispatch, and ignores pushes to the features branch."